$Conf{RsyncShareName} = [
  '/root',
  '/etc',
  '/home',
  '/usr',
  '/var'
];

$Conf{BackupFilesExclude} = {
  '*' => [
    '/cgroup',
    '/data',
    '/dev',
    '/lost+found',
    '/misc',
    '/mnt',
    '/net',
    '/proc',
    '/selinux',
    '/sys',
    '/tmp',
    '/var/tmp',
    '/var/cache/yum',
    '/var/lib/libvirt/images'
  ]
};
$Conf{ClientNameAlias} = [
  '{{ item.hostname }}',
  '{{ item.alias }}',
];
$Conf{PingMaxMsec} = 1000;
$Conf{RsyncClientPath} = '/usr/bin/rsync';
$Conf{RsyncSshArgs} = [
  '-e',
  '$sshPath -l {{ backuppc_client_user }}'
];
